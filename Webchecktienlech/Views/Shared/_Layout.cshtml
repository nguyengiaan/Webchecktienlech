<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>One click</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Webchecktienlech.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="/Images/icon-website.png" />

</head>
<body>
<nav class="navbar navbar-expand-lg custom-navbar">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="#">
            <img src="~/Images/icon-website.png" alt="Anime Logo" class="anime-logo">
            <span class="ms-2">One click Tool</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Tool kiểm tra lệch tiền</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/So-sanh-ho-so">Tool kiểm tra hồ sơ</a>
                </li>
                <li class="nav-item"></li>
                    <a class="nav-link active" aria-current="page" href="/So-sanh-tien">Tool kiểm tra tiền</a>
                </li>
            
            </ul>
        </div>
    </div>
</nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
</body>
</html>
<style>
    .custom-navbar {
    background: linear-gradient(90deg, #ff7eb3, #ff758c);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 10px 20px;
}

.custom-navbar .navbar-brand {
    font-size: 1.5rem;
    font-weight: bold;
    color: #fff;
}

.custom-navbar .navbar-brand:hover {
    color: #ffe4e1;
    text-decoration: none;
}

.custom-navbar .anime-logo {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #fff;
}

.custom-navbar .nav-link {
    color: #fff;
    font-size: 1rem;
    font-weight: 500;
    transition: color 0.3s ease;
}

.custom-navbar .nav-link:hover {
    color: #ffe4e1;
}

.custom-navbar .nav-link.active {
    color: #ffe4e1;
    font-weight: bold;
}
</style>